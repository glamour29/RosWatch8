{
    // Luôn thêm dấu ngoặc đơn xung quanh tham số của hàm arrow (vd: (x) => x)
    "prettier.arrowParens": "always",

    // Đặt dấu ngoặc kết thúc xuống dòng mới trong JSX (false nghĩa là xuống dòng)
    "prettier.bracketSameLine": false,

    // Thêm khoảng trắng bên trong dấu ngoặc nhọn (vd: { foo: bar })
    "prettier.bracketSpacing": true,

    // Dùng dấu nháy đơn trong JSX (vd: <div className='example' />)
    "prettier.jsxSingleQuote": true,

    // Giới hạn độ rộng mỗi dòng code là 100 ký tự, giúp code dễ đọc hơn
    "prettier.printWidth": 100,

    // Chỉ dùng dấu nháy quanh tên thuộc tính khi thật sự cần thiết
    "prettier.quoteProps": "as-needed",

    // Thêm dấu chấm phẩy cuối mỗi dòng
    "prettier.semi": true,

    // Đặt mỗi thuộc tính trong JSX xuống dòng riêng nếu có nhiều thuộc tính
    "prettier.singleAttributePerLine": true,

    // Sử dụng dấu nháy đơn thay vì nháy kép trong JS/JSX (vd: const x = 'hello';)
    "prettier.singleQuote": true,

    // Đặt kích thước tab thành 2 khoảng trắng, giúp code gọn gàng hơn
    "prettier.tabWidth": 2,

    // Thêm dấu phẩy ở cuối các phần tử trong object và array theo chuẩn ES5
    "prettier.trailingComma": "es5",

    // Sử dụng khoảng trắng thay vì tab
    "prettier.useTabs": false
}